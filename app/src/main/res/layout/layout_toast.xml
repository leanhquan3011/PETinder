<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toast_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8dp"
        android:background="@drawable/toast_warning_shape"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/toast_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_warning_transparent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.leaquan.petinder.ui.custom_view.TextViewPET
            android:id="@+id/toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_13sp"
            android:text="This is Custom Toast."
            app:layout_constraintTop_toTopOf="@id/toast_icon"
            app:layout_constraintBottom_toBottomOf="@id/toast_icon"
            app:layout_constraintStart_toEndOf="@id/toast_icon"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>