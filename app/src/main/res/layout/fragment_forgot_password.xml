<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.leaquan.petinder.ui.custom_view.TextViewPET
            android:id="@+id/tv_title"
            android:text="@string/forgot_password_title"
            android:textSize="@dimen/_24sp"
            android:gravity="center"
            android:layout_width="@dimen/match_constraint"
            android:layout_marginTop="@dimen/_30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TextViewPET.SubTitle.Black"/>

        <com.leaquan.petinder.ui.custom_view.EdittextPET
            android:id="@+id/edt_code"
            android:hint="Code OTP"
            android:layout_marginTop="@dimen/_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            style="@style/EdittextPET.Default"/>

        <com.leaquan.petinder.ui.custom_view.TextViewPET
            android:id="@+id/tv_err_msg"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:textColor="@color/red_5e"
            android:textSize="@dimen/_12sp"
            android:visibility="gone"
            android:text="lỗi rồi nha mạy"
            app:layout_constraintStart_toStartOf="@id/edt_code"
            app:layout_constraintEnd_toEndOf="@id/edt_code"
            app:layout_constraintTop_toBottomOf="@id/edt_code"/>

        <com.leaquan.petinder.ui.custom_view.TextViewPET
            android:id="@+id/tv_send_code"
            android:text="send code"
            android:layout_marginTop="@dimen/_30dp"
            android:textSize="@dimen/_18sp"
            app:layout_constraintTop_toBottomOf="@id/edt_code"
            app:layout_constraintStart_toStartOf="@id/edt_code"
            app:layout_constraintEnd_toEndOf="@id/edt_code"
            style="@style/TextViewPET"/>

        <com.leaquan.petinder.ui.custom_view.TextViewPET
            android:id="@+id/tv_content"
            android:text="Một email đã được gửi đến địa chỉ ở trên với đường link để đặt lại mật khẩu"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_width="@dimen/match_constraint"
            android:textSize="@dimen/_18sp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_send_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TextViewPET"/>

        <com.leaquan.petinder.ui.custom_view.ButtonPET
            android:id="@+id/btn_send"
            style="@style/ButtonPET.Gradient"
            android:layout_marginTop="@dimen/_30dp"
            android:paddingBottom="@dimen/_4dp"
            android:text="Send OPT Code"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
