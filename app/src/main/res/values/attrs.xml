<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fontType" format="enum">
        <enum name="title" value="1"/>
        <enum name="normal" value="2"/>
        <enum name="bold" value="3"/>
        <enum name="extra_bold" value="4"/>
        <enum name="italic" value="5"/>
    </attr>

    <declare-styleable name="TextViewPET">
        <attr name="fontType"/>
    </declare-styleable>

    <declare-styleable name="ButtonPET">
        <attr name="fontType"/>
        <attr name="gradientText" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EdittextPET">
        <attr name="fontType"/>
    </declare-styleable>

</resources>