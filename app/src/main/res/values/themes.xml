<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PETinder" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- enable window content transitions -->
        <item name="android:windowEnterTransition">@android:transition/no_transition</item>
        <item name="android:windowExitTransition">@android:transition/no_transition</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <!--=========================================================================================-->

    <!--TextView PET-->
    <style name="TextViewPET" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextViewPET.Title" parent="TextViewPET">
        <item name="fontType">title</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewPET.SubTitle.White" parent="TextViewPET">
        <item name="fontType">title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewPET.SubTitle.Black" parent="TextViewPET">
        <item name="fontType">title</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextViewPET.Description" parent="TextViewPET">
        <item name="fontType">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewPET.Bold" parent="TextViewPET">
        <item name="fontType">bold</item>
    </style>
    <!--=========================================================================================-->

    <!--Button PET-->
    <style name="ButtonPET" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_30dp</item>
    </style>

    <style name="ButtonPET.White" parent="ButtonPET">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontType">title</item>
    </style>

    <style name="ButtonPET.Gradient" parent="ButtonPET">
        <item name="android:background">@drawable/bg_button_gradient</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontType">title</item>
    </style>

    <style name="ButtonPET.Gradient.Border" parent="ButtonPET">
        <item name="android:background">@drawable/bg_button_gradient_border</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/gray_ccb5</item>
    </style>
    <!--=========================================================================================-->

    <!--Edittext PET-->
    <style name="EdittextPET" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">@dimen/_50dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_30dp</item>
    </style>

    <style name="EdittextPET.Default" parent="EdittextPET">
        <item name="android:background">@drawable/bg_edittext_gray</item>
        <item name="android:lineSpacingExtra">@dimen/_2sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:paddingHorizontal">@dimen/_18dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">30</item>
        <item name="fontType">normal</item>
        <item name="maxLines">1</item>
    </style>
    <!--=========================================================================================-->

    <!--ImageView-->
    <style name="ImageView.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_12dp</item>
        <item name="android:paddingHorizontal">@dimen/_8dp</item>
        <item name="android:background">@drawable/bg_edittext_gray</item>
    </style>
    <!--=========================================================================================-->

    <!--BottomSheet-->
    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
    <!--=========================================================================================-->


</resources>